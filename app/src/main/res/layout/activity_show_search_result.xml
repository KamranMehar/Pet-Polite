<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_margin="8dp"
    android:backgroundTint="@color/white">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/backButton"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/arrow_back"
                android:scaleType="centerCrop"
                android:contentDescription="TODO" />
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardCornerRadius="13dp">
                <ImageView
                    android:id="@+id/petImageItem"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/cat_cover_pic"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/breedNameItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Breed Name"
                android:textSize="30sp"
                android:textColor="@color/myBlue"
                android:gravity="center"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="Description: "
                android:textColor="@color/myBlue"
                android:layout_margin="5dp"/>
            <TextView
                android:id="@+id/descriptionItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="Description"
                android:textColor="@color/black"
                android:layout_margin="5dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="Feeding: "
                android:textColor="@color/myBlue"
                android:layout_margin="5dp"/>
            <TextView
                android:id="@+id/feedingItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="Feeding"
                android:textColor="@color/black"
                android:layout_margin="5dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="Grooming :"
                android:textColor="@color/myBlue"
                android:layout_margin="5dp"/>
            <TextView
                android:id="@+id/groomingItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="grooming"
                android:textColor="@color/black"
                android:layout_margin="5dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="Handling: "
                android:textColor="@color/myBlue"
                android:layout_margin="5dp"/>
            <TextView
                android:id="@+id/handlingItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="handling"
                android:textColor="@color/black"
                android:layout_margin="5dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="Sleep Needs :"
                android:textColor="@color/myBlue"
                android:layout_margin="5dp"/>
            <TextView
                android:id="@+id/sleep_needItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="sleep need"
                android:textColor="@color/black"
                android:layout_margin="5dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="Housing: "
                android:textColor="@color/myBlue"
                android:layout_margin="5dp"/>
            <TextView
                android:id="@+id/housingItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="housing"
                android:textColor="@color/black"
                android:layout_margin="5dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>